@page "/crear-persona"
@inject HttpClient Http
@inject IUriHelper UriHelper
@attribute [Authorize]
@using Microsoft.AspNetCore.Authorization;
<h3>Crear Persona</h3>

<FormularioPersonas TextoBtn="Crear Persona" OnValidadSubmit="@CrearPersona" Persona="@persona"></FormularioPersonas>

@code {
    Persona persona = new Persona();

    async Task CrearPersona()
    {

        await Http.PostJsonAsync("personas", persona);
        UriHelper.NavigateTo("indice-personas");

    }
}
