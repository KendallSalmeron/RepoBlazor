
<EditForm Model="@Persona" OnValidSubmit="@OnValidadSubmit">
    <div class="form-field">
        <label>Nombre:</label>
        <div>
            <InputText @bind-Value="@Persona.Nombre" />
            <ValidationMessage For="@(() => Persona.Nombre)"></ValidationMessage>
        </div>
    </div>
    <button type="submit" class="btn btn-success">@TextoBtn</button>
    <DataAnnotationsValidator />
</EditForm>

@code {
    [Parameter] public Persona Persona { get; set; } = new Persona();
    [Parameter] public String TextoBtn { get; set; } = "Salvar Cambios";
    [Parameter] public EventCallback OnValidadSubmit { get; set; }

}
